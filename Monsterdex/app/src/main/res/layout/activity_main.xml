<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android=
    "http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/monsterImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/backgroundvertical"/>

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="800dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/headinglogo"/>

    <ImageView
        android:layout_marginTop="180dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/scientist"/>



    <TextView
        android:id="@+id/professorNameLabelSimpleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFBFA521"
        android:fontFamily="@font/merchant_copy"
        android:padding="8dp"
        android:text="Professor Applewhite"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/professorSaysLabelSimpleTextView"
        android:layout_width="300dp"
        android:layout_height="130dp"
        android:background="#FFBFA521"
        android:fontFamily="@font/merchant_copy"
        android:padding="10dp"
        android:text="''Welcome to my Monsterdex!
                        Please use this handy application
                        to review my many hours of research
                        on the monsters of the world.''"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/openBtn"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="602dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:text="Open Monsterdex"/>

</RelativeLayout>
